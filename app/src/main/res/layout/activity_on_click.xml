<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cmput301.yfeng3countbook.onClick"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/reset"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Reset value"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/done" />

    <Button
        android:id="@+id/del"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="Delete this book"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="31dp" />

    <TextView
        android:id="@+id/bookName"
        android:layout_width="368dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintRight_toLeftOf="@+id/subbutton"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/addbutton"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/editName" />

    <Button
        android:id="@+id/addbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/bookName"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/subbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/bookName"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/done"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="DOne"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/del" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="368dp"
        android:layout_height="44dp"
        android:layout_marginTop="17dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/editNumber"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Edit name here: "
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/bookName"
        tools:layout_editor_absoluteX="85dp" />

    <EditText
        android:id="@+id/editComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/comment"
        tools:layout_editor_absoluteX="85dp" />

    <EditText
        android:id="@+id/editNumber"
        android:layout_width="169dp"
        android:layout_height="40dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Edit current number"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/current"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/editInit"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/editInit"
        android:layout_width="168dp"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Edit init value"
        android:inputType="number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current"
        android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>
